@model IEnumerable<BookApplication.Domain.PartnerModels.Product>

@{
    ViewData["Title"] = "Партнери";
}

<link rel="stylesheet" href="~/css/Books/book_index.css" asp-append-version="true" />

<div class="text-center">
    <h4 href="https://google.com"class="display-4">Партнери</h4>
    <p class="lead">Нашите партнерски производи</p>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="book-image-container">
                        <img src="@item.ImageUrl" class="book-cover-image" alt="Product Image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text author">@item.Author.FullName</p>
                        <p class="card-text text-t"><strong>ISBN:</strong> @item.ISBN</p>
                        <p class="card-text text-t"><strong>Категорија:</strong> @item.Category.Name</p>
                        <p class="card-text text-t"><strong>Поврзница:</strong> @item.Cover.Name</p>
                        <p class="card-text text-t"><strong>Цена:</strong> @item.Price ден.</p>
                        <p class="card-text text-t"><strong>Залиха:</strong> @(Convert.ToBoolean(item.InStock)? "Достапно" : "Нема на залиха")</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-b">Детали</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .book-image-container {
        height: 300px;
        overflow: hidden;
        position: relative;
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .book-cover-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
        padding: 15px;
    }

        .book-cover-image:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

    .card {
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .btn-b {
        margin-top: 15px;
    }

    .text-t {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .author {
        color: #6c757d;
        font-style: italic;
        margin-bottom: 1rem;
    }
</style>