@model BookApplication.Domain.Domain.Publisher

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Author/a_details.css" asp-append-version="true" />

<div class="text-center">
    <h4 class="display-4">Здраво... :)</h4>
</div>

<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Мејл
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Вебстрана
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Адреса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street),
            @Html.DisplayFor(model => model.Address.City),
            @Html.DisplayFor(model => model.Address.Country)
        </dd>
    </dl>
</div>
<div>
     @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Измени</a>
    }
    |
    <a asp-action="Index">Назад</a>
</div>
