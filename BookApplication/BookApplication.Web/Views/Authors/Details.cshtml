@model BookApplication.Domain.Domain.Author

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Author/a_details.css" asp-append-version="true" />

<div class="text-center">
    <h4 class="display-4">Здраво... :)</h4>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Презиме
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Биографија
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
        <dt class = "col-sm-2">
            Датум на раѓање
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            Слика
        </dt>
        <dd class = "col-sm-10">
            <!--- @Html.DisplayFor(model => model.Image) -->
            <img class="card-img-top" src="@Model.Image" alt="Card image cap">
        </dd>
    </dl>
</div>
<div>
     @if (User.Identity.IsAuthenticated)
                    {
    <a asp-action="Edit" asp-route-id="@Model?.Id">Измени</a>
    } |
    <a asp-action="Index">Назад</a>
</div>
