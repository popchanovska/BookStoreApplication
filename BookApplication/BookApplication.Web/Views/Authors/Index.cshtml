@model IEnumerable<BookApplication.Domain.Domain.Author>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Publishers/p_index.css" asp-append-version="true" />

<div class="text-center">
    <h4 class="display-4">Здраво, ние сме авторите на книгите!</h4>
    <p class="lead">Мило ми е што се запознавме.</p>
</div>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary">Додади</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Име
            </th>
            <th>
                Презиме
            </th>
            <th>
                Биографија
            </th>
            <th>
                Дата на раѓање
            </th>
            <th>
                Слика
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Измени</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
