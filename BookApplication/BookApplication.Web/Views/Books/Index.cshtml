@model IEnumerable<BookApplication.Domain.Domain.Book>

@{
    ViewData["Title"] = "Books - Book Shop";
}

<link rel="stylesheet" href="~/css/Books/book_index.css" asp-append-version="true" />

<div class="text-center">
    <h1 class="display-4">Explore Our Collection</h1>
    <p class="lead">Find your next great read from our wide selection of books.</p>
</div>

<p class="text-center">
    <a class="btn btn-secondary" asp-action="Create">Add a New Book</a>
</p>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.CoverImage" class="card-img-top" alt="Book Cover">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">by @($"{item.Author.FirstName} {item.Author.LastName}")</p>
                        <p class="card-text"><strong>Genre:</strong> @item.Genre</p>
                        <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">View Details</a>
                    </div>
                    <div class="card-footer text-center">
                        <form asp-controller="ShoppingCarts" asp-action="AddToCart" method="post">
                            <input type="hidden" name="BookId" value="@item.Id" />
                            <input type="number" name="bookQuantity" min="1" value="1" class="form-control d-inline w-auto" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
