@model BookShopAdmin.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "_Layout";
}

<h2>@Model.Title</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author.FirstName
            @Model.Author.LastName
        </dd>

        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.ISBN
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price мкд.
        </dd>

        <dt class="col-sm-2">
            Publication Year
        </dt>
        <dd class="col-sm-10">
            @Model.PublicatonYear
        </dd>

        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>

        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher.Name
        </dd>
        <dd>
            <img src=@Model.CoverImage alt="Cover Image" style="max-width: 300px;" />
        </dd>
    </dl>
</div>

<div>
     <a href="@Url.Action("Edit", "Books", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to List</a> 
</div>