@using BookShopAdmin.Models
@model BookShopAdmin.Models.Book
@using BookShopAdmin.Models.Enums
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<h1>Edit Book</h1>

<hr />
  
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- AuthorId Dropdown -->
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                    @foreach (var author in ViewBag.AuthorId as SelectList)
                    {
                        <option value="@author.Value" @(author.Value == Model.AuthorId.ToString() ? "selected" : "")>@author.Text</option>
                    }
                </select>
            </div>


            <!-- Title Input -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- ISBN Input -->
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" value="@Model.ISBN"/>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <!-- Price Input -->
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value="@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Cover Image Input -->
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label"></label>
                <input asp-for="CoverImage" class="form-control" value="@Model.CoverImage"/>
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>

            <!-- Publication Year Input -->
            <div class="form-group">
                <label asp-for="PublicatonYear" class="control-label"></label>
                <input asp-for="PublicatonYear" class="form-control" value="@Model.PublicatonYear"/>
                <span asp-validation-for="PublicatonYear" class="text-danger"></span>
            </div>

            <!-- IsHardcover Checkbox -->
            <div class="form-group form-check">
                <input type="checkbox" asp-for="IsHardcover" class="form-check-input" />
                <label asp-for="IsHardcover" class="form-check-label"></label>
            </div>


            <!-- Rating Input -->
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" value="@Model.Rating" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- Genre Input -->
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    @foreach (var genre in Enum.GetValues(typeof(Genre)).Cast<Genre>())
                    {
                        <option value="@genre" @(genre == Model.Genre ? "selected" : "")>@genre</option>
                    }
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <!-- PublisherId Dropdown -->
            <div class="form-group">
                <select asp-for="PublisherId" class="form-control">
                    @foreach (var publisher in ViewBag.PublisherId as SelectList)
                    {
                        <option value="@publisher.Value" @(publisher.Value == Model.PublisherId.ToString() ? "selected" : "")>@publisher.Text</option>
                    }
                </select>
            </div>

            <!-- Hidden ID Input -->
            <input type="hidden" asp-for="Id" />

            <!-- Save Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
